<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane stylesheets="@/resources/styles/styles.css" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.ReadAllTopicController">
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <TableView fx:id="topicTable" prefHeight="400.0" prefWidth="800.0" GridPane.columnSpan="7" GridPane.rowIndex="2">
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy></TableView>
      <Label fx:id="userLabel" text="Welcome, USERID" GridPane.columnIndex="2" />
      <ImageView fx:id="userIcon" fitHeight="48.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1">
         <GridPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </GridPane.margin></ImageView>
      <Separator prefWidth="200.0" visible="false" GridPane.columnIndex="3" />
      <Separator prefWidth="200.0" visible="false" GridPane.columnIndex="4" />
      <MenuBar fx:id="notificationsMenu" maxHeight="-Infinity" maxWidth="-Infinity" GridPane.columnIndex="6" />
      <Label fx:id="addText" text="Add Topic" GridPane.columnIndex="6" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
         <GridPane.margin>
            <Insets left="100.0" />
         </GridPane.margin></Label>
      <Button fx:id="createTopicButton" onAction="#createUser" mnemonicParsing="false" prefHeight="32.0" prefWidth="32.0" style="-fx-background-color: transparent;" GridPane.columnIndex="6" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
   </children>
</GridPane>
