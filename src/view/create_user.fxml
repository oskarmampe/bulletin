<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="controller.CreateUserController"
          prefHeight="400.0" prefWidth="600.0">

    <Text text="Username: " GridPane.rowIndex="0" GridPane.columnIndex="0"  />
    <TextField fx:id="usernameTxt" GridPane.rowIndex="0" GridPane.columnIndex="1" />

    <Text text="Password: " GridPane.rowIndex="1" GridPane.columnIndex="0"  />
    <TextField fx:id="passwordTxt" GridPane.rowIndex="1" GridPane.columnIndex="1" />

    <Text text="Email: " GridPane.rowIndex="2" GridPane.columnIndex="0"  />
    <TextField fx:id="emailTxt" GridPane.rowIndex="2" GridPane.columnIndex="1" />

    <ComboBox fx:id="imagesCmb" GridPane.rowIndex="3" GridPane.columnIndex="0"  />

    <Button text="Create" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.halignment="RIGHT" onAction="#createUser"/>

    <Button text="Login" GridPane.rowIndex="4" GridPane.columnIndex="1" GridPane.halignment="RIGHT" onAction="#navigateWelcome"/>


</GridPane>
