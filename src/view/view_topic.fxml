            <graphic>
               <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../resources/images/icons/send.png" />
                  </image>
               </ImageView>
            </graphic>
         </Button>
      </children>
   </AnchorPane>


    <Button fx:id="addPost" onAction="#addPost" text="Add Post" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="2" />

