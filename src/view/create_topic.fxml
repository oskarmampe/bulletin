<GridPane fx:controller="controller.CreateTopicController"
          xmlns:fx="http://javafx.com/fxml"
          alignment="center"
          hgap="10"
          vgap="10"
          prefWidth="600"
          prefHeight="600">

    <Text text="Send Object: " GridPane.rowIndex="0" GridPane.columnIndex="0"  />
    <TextField fx:id="objTextField" GridPane.rowIndex="0" GridPane.columnIndex="1" />
    <Button text="Send" GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.halignment="RIGHT" onAction="#createTopic"/>


    <Button text="Change Scene" GridPane.rowIndex="3" GridPane.columnIndex="1" GridPane.halignment="RIGHT" onAction="#changeScene"/>

